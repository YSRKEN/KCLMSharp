<Page x:Class="KCLMSharp.View.OptionPage1"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:KCLMSharp.View"
	mc:Ignorable="d" 
	d:DesignHeight="800" d:DesignWidth="400" Title="OptionPage1">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="24" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<ComboBox Grid.Column="0" ItemsSource="{Binding ModeList}" SelectedIndex="{Binding ModeIndex}" FontSize="15" SelectionChanged="ComboBox_SelectionChanged" />
			<ComboBox Grid.Column="1" ItemsSource="{Binding OptionModeList}" SelectedIndex="{Binding OptionModeIndex}" FontSize="15" />
		</Grid>
		<CheckBox Grid.Row="1" Content="常にメインウィンドウを最前列表示" VerticalAlignment="Center" />
	</Grid>
</Page>
